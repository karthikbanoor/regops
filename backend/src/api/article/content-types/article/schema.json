{
    "kind": "collectionType",
    "collectionName": "articles",
    "info": {
        "singularName": "article",
        "pluralName": "articles",
        "displayName": "Article",
        "description": "Blog articles"
    },
    "options": {
        "draftAndPublish": true
    },
    "attributes": {
        "title": {
            "type": "string",
            "required": true
        },
        "slug": {
            "type": "uid",
            "targetField": "title",
            "required": true
        },
        "description": {
            "type": "text",
            "maxLength": 500
        },
        "content": {
            "type": "richtext"
        },
        "coverImage": {
            "type": "media",
            "multiple": false,
            "allowedTypes": [
                "images"
            ],
            "required": false
        },
        "author": {
            "type": "string"
        },
        "publishedAt": {
            "type": "datetime"
        },
        "seo": {
            "type": "component",
            "repeatable": false,
            "component": "shared.seo"
        }
    }
}